<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color (white in this example) -->
            <corners android:radius="8dp" /> <!-- Border radius in dp -->
        </shape>
    </item>

    <!-- Border -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:color="#CCCCCC" android:width="1dp" /> <!-- Border color (gray) and width -->
            <corners android:radius="10dp" /> <!-- Border radius in dp, matching the background -->
        </shape>
    </item>

</layer-list>
